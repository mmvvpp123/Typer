<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.InlineCssTextArea?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="newMenuItem" mnemonicParsing="false" onAction="#newButton" text="New" />
                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" onAction="#open" text="Open" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#cut" text="Cut" />
                    <MenuItem mnemonicParsing="false" onAction="#copy" text="Copy" />
                        <MenuItem mnemonicParsing="false" onAction="#paste" text="Paste" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Tools">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#getSyllables" text="Syllable Counter" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox>
               <children>
                  <Button fx:id="changeColorButton" mnemonicParsing="false" onAction="#changeColor" text="Button" />
               </children></HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Word Count: " />
            <Label fx:id="wordCountLabel" />
         </children>
      </HBox>
   </bottom>
   <center>
      <InlineCssTextArea fx:id="textArea" onKeyTyped="#updateNumbers" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
