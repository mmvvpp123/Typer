<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXColorPicker?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.InlineCssTextArea?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="newMenuItem" mnemonicParsing="false" onAction="#newButton" text="New" />
                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" onAction="#open" text="Open">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="UP" meta="DOWN" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                    <MenuItem mnemonicParsing="false" text="Close" />
                        <MenuItem mnemonicParsing="false" onAction="#save" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#cut" text="Cut" />
                    <MenuItem mnemonicParsing="false" onAction="#copy" text="Copy" />
                        <MenuItem mnemonicParsing="false" onAction="#paste" text="Paste" />
                        <MenuItem mnemonicParsing="false" onAction="#generateText" text="Markov" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                     <items>
                        <CheckMenuItem fx:id="wordCountMenuItem" mnemonicParsing="false" onAction="#showWordCount" text="Word Counter" />
                        <CheckMenuItem fx:id="syllableCountMenuItem" mnemonicParsing="false" onAction="#showSyllableCounter" text="Syllable Counter" />
                        <CheckMenuItem fx:id="sentenceCountMenuItem" mnemonicParsing="false" onAction="#showSentenceCount" text="Sentence Counter" />
                        <CheckMenuItem fx:id="fleschScoreMenuItem" mnemonicParsing="false" onAction="#showFleschScore" text="Flesch Score" />
                     </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0">
               <children>
                  <JFXButton ellipsisString="" layoutX="20.0" layoutY="15.0" onAction="#newButton" prefHeight="30.0" prefWidth="0.0" text="">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@resources/icons8-document.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton ellipsisString="" onAction="#open" prefHeight="30.0" prefWidth="0.0" text="">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@resources/icons8-opened_folder.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton ellipsisString="" layoutX="20.0" layoutY="13.0" onAction="#save" text="">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@resources/icons8-save.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXComboBox fx:id="fontChoiceBox" onAction="#changeFontAction" value="Arial">
                   <items>
                       <FXCollections fx:factory="observableArrayList">
                           <String fx:value="Arial" />
                           <String fx:value="Comic Sans MS" />
                           <String fx:value="Georgia" />
                           <String fx:value="Times New Roman" />
                           <String fx:value="Verdana" />
                       </FXCollections>
                   </items>
                  </JFXComboBox>

                  <Spinner fx:id="fontSizeSpinner" editable="true" initialValue="12" max="72" min="1" onMouseClicked="#changeFontSize" prefWidth="80.0" />
                  <JFXColorPicker fx:id="colorPicker" onAction="#changeColor" />
                  <JFXCheckBox fx:id="displayCounterCheckBox" onAction="#displayCounters" text="Display Counters" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding></HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="wordCountText" contentDisplay="TOP" opacity="0.0" text="Word Count: " underline="true" />
            <Label fx:id="wordCountLabel" opacity="0.0" text="0" textFill="#3456ff" />
            <Label fx:id="syllableText" alignment="CENTER_RIGHT" contentDisplay="RIGHT" opacity="0.0" text="Syllable Count:" textAlignment="CENTER" underline="true" />
            <Label fx:id="syllableCountLabel" opacity="0.0" text="0" textFill="#3456ff" />
            <Label fx:id="sentenceText" opacity="0.0" text="Sentence Count:" underline="true" />
            <Label fx:id="sentenceCountLabel" opacity="0.0" text="0" textFill="#3456ff" />
            <Label fx:id="fleschScoreText" opacity="0.0" text="Flesch Score:" underline="true" />
            <Label fx:id="fleschScoreLabel" opacity="0.0" text="0" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <InlineCssTextArea fx:id="textArea" onKeyPressed="#statusBarListener" wrapText="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin></InlineCssTextArea>
   </center>
</BorderPane>
